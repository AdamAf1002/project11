{% extends 'base.html.twig' %}

{% block title %}Error{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1 class="display-4">
                <i class="fas fa-times-circle text-danger"></i>
            </h1>
            <h2 class="text-danger">Error!</h2>
            <ul>
            {%for error in errors%}
            <li style="red">{{ error }}</li>
            {%endfor%}
            </ul>
            <br>
            <a href="/user"><i class="fa-solid fa-rotate-right fa-2xl" style="color: #3584e4;"></i></a>
        </div>
    </div>
</div>
{% endblock %}
