  <script>
  // Tableau des noms à suggérer
		

		// Récupérer la barre de recherche et la liste des suggestions
		let searchBar = document.getElementById("search-bar");
    let names =searchBar.getAttribute("data-etudiant");
		let suggestionsList = document.getElementById("suggestions");
    console.log(names);

		// Fonction pour afficher les suggestions de noms
		function showSuggestions() {
			// Récupérer la valeur de la barre de recherche
			let searchValue = searchBar.value;

			// Effacer les anciennes suggestions
			suggestionsList.innerHTML = "";

			// Si la barre de recherche est vide, ne rien faire
			if (searchValue === "") {
        suggestionsList.style.display="none";
				return;
			}
			// Boucler sur le tableau des noms pour trouver des suggestions
			for (let i = 0; i < names.length; i++) {
				// Si le nom commence par la valeur de la barre de recherche, ajouter une suggestion
				if (names[i].toLowerCase().startsWith(searchValue.toLowerCase())) {
					let suggestion = document.createElement("li");
					suggestion.textContent = names[i];
					suggestionsList.appendChild(suggestion);
				}
			}
  suggestionsList.style.display="";
		}
    
    // Événement pour mettre à jour les suggestions quand la barre de recherche change
		searchBar.addEventListener("input", showSuggestions);
    searchBar.addEventListener("output", function(e){
      e.style.display="none";
    });
    

</script>
