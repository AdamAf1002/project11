{% extends 'base.html.twig' %}

{% block title %}Note{% endblock %}

{% block body %}
<center>
    <h1>Notes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Note</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td>{{ note.note }}</td>
                <td>
                    <a href="{{ path('app_note_show', {'anneeuniversitaire': note.anneeuniversitaire}) }}">Voir</a>
                    <a href="{{ path('app_note_edit', {'anneeuniversitaire': note.anneeuniversitaire}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Aucune note n'a encore été insérée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_note_new') }}">Insérer une nouvelle note</a>
</center>
{% endblock %}
